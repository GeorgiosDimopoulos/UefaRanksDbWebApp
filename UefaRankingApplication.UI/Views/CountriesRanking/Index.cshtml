@model IEnumerable<UefaRankingApplication.Data.Models.Country>

@{
    ViewData ["Title"] = "Ranking";
}
<br />
<div class="border p-4 bg-white">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info"> Countries Ranking List</h2>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        Ranking Position
                    </th>
                    <th>
                        Country Name
                    </th>
                    <th>
                        Country  Points
                    </th>
                    <th>
                        Active Teams Number
                    </th>
                    <th>
                        All Teams Number
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {                          
                    <tr>
                        <td>
                            @item.RankingPosition
                        </td>                        
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.CountryPoints
                        </td>
                        <td>
                            @item.ActiveTeamsNumber
                        </td>
                        <td>
                            @item.AllTeamsNumber
                        </td>
                        <td>
                            <a class="btn btn-danger text-white" asp-action="Upsert" asp-route-Id="@item.Id">
                                Report Issue
                            </a>
                        </td>
                    </tr>                    
                }                                                               
            </table>
        }
        else
        {
            <p>No country found</p>
        }
    </div>
</div>