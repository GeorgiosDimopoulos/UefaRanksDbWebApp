@model UefaRankingApplication.Data.Models.Country
@{
    var title = "Add Country";
}
<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        @if (Model.Id != 0)
        {
            //edit
            title = "Edit Country";
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="CountryPoints"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CountryPoints" class="form-control" />
                    <span asp-validation-for="CountryPoints" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="AllTeamsNumber"></label>
                </div>
                <div class="col-8">
                    <input asp-for="AllTeamsNumber" class="form-control" />
                    <span asp-validation-for="AllTeamsNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="AllTeamsNumber"></label>
                </div>
                <div class="col-8">
                    <input asp-for="AllTeamsNumber" class="form-control" />
                    <span asp-validation-for="AllTeamsNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="RankingPosition"></label>
                </div>
                <div class="col-8">
                    <input asp-for="RankingPosition" class="form-control" />
                    <span asp-validation-for="RankingPosition" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group row py-2">
            <div class="col-4 offset-4">
                @if (Model.Id != 0)
                {
                    <button type="submit" class="btn btn-primary form-control">Update</button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                }
            </div>
            <div class="col-4">
                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
            </div>
            <div class="col-4">
                <a asp-action="Index" class="btn btn-danger form-control">Delete Country and Teams</a>
            </div>
        </div>
    </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(function () {
            $("#datepicker_dob").datepicker({
            });
        });
    </script>
}