@model IEnumerable<UefaRankingApplication.Data.Models.Country>

<br />
<br />
<div class="border p-4 bg-white">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info"> Countries List</h2>
        </div>

        <div class="col-3 text-right">
            <a asp-action="Upsert" class="btn btn-info form-control"> Create New Country</a>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        Country Name
                    </th>
                    <th>
                        Options
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            <a class="btn btn-primary text-white" asp-action="Upsert" asp-route-Id="@item.Id">
                                Edit
                            </a>

                            <a class="btn btn-warning text-white" asp-action="Teams" asp-route-Id="@item.Id">
                                Country Teams
                            </a>

                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@item.Id">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No country exists...</p>
        }
    </div>
</div>