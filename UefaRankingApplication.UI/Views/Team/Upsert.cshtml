@model UefaRankingApplication.Data.Models.Team
@{
    var title = "Add Team";
}
<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        @if (Model.Id != 0)
        {
            //edit
            title = "Edit Author";
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="GroupPoints"></label>
                </div>
                <div class="col-8">
                    <input asp-for="GroupPoints" class="form-control" />
                    <span asp-validation-for="GroupPoints" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="RankingPoints"></label>
                </div>
                <div class="col-8">
                    <input asp-for="RankingPoints" class="form-control" />
                    <span asp-validation-for="RankingPoints" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="Country"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Country" class="form-control" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                @* <div class="col-4">
                <label asp-for="Country"></label>
                </div>
                <div class="col-8">
                @if (Model.Id != 0)
                {
                <input asp-for="Country" placeholder="mm/dd/yyyy" id="datepicker_dob" type="text" class="form-control" />
                }
                else
                {
                <input asp-for="Country" value="" placeholder="mm/dd/yyyy" id="datepicker_dob" type="text" class="form-control" />
                }
                <span asp-validation-for="BirthDate" class="text-danger"></span> *@
            </div>
        </div>
        <div class="form-group row py-2">
            <div class="col-4 offset-4">
                @if (Model.Id != 0)
                {
                    <button type="submit" class="btn btn-primary form-control">Update</button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                }
            </div>
            <div class="col-4">
                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(function () {
            $("#datepicker_dob").datepicker({
            });
        });
    </script>
}