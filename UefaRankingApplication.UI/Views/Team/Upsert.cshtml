@model UefaRankingApplication.Data.Models.Team
@{
    var title = "Team Info";
}
<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        @if (Model.Id != 0)
        {
            //edit
            title = "Edit Team";
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="GroupPoints"></label>
                </div>
                <div class="col-8">
                    <input asp-for="GroupPoints" class="form-control" />
                    <span asp-validation-for="GroupPoints" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="RankingPoints"></label>
                </div>
                <div class="col-8">
                    <input asp-for="RankingPoints" class="form-control" />
                    <span asp-validation-for="RankingPoints" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="Country"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Country" class="form-control" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                @* <div class="form-group row py-2">
                    @Html.DropDownListFor(t => t.Country.Name, Model.CountryList, "--Select Country--", new { @class = "form-select" })
                </div> *@
            </div>
        </div>
        <div class="form-group row py-2">
            <div class="col-4 offset-4">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-4">
                <a asp-action="Delete" class="btn btn-danger text-white">@* asp-route-Id="@item.Id" *@
                Delete Team</a>
            </div>
    </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(function () {
            $("#datepicker_dob").datepicker({
            });
        });
    </script>
}